@model HESSorgu.Models.checkEmployee

@{
    ViewBag.Title = "SorguResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-agille">
    <div class="formBox level-login" style="right: 280px;">
        <div class="box loginBox" style="width : 1000px">
            <div class="row">

                <h3>HES Kodu Sonucu</h3>

                @if (Model.current_health_status == "GÜVENLİ")
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="90" height="90" fill="green" class="bi bi-check" viewBox="0 0 16 16" style="top: -30px; position: relative; right: 45px;">
                        <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z" />
                    </svg>
                }

                @if (Model.current_health_status == "RİSKLİ")
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="90" height="90" fill="red" class="bi bi-x" viewBox="0 0 16 16" style="top: -30px; position: relative; right: 45px;">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                    </svg>
                }

            </div>

            <form class="form" action="@Url.Content("~/Home/Anasayfa")" method="post">

                <div class="row">
                    <div class="col-6">

                        <label for="male" style="font-size: 25px; /* font-size: 30px; */ margin-bottom: 40px; /* position: relative; */ font-family: 'Raleway', sans-serif; color: white; padding-right: 20px; padding-top: 15px;">ADI</label>
                        <input type="text" class="input-field" placeholder=@Model.masked_firstname disabled="disabled" style="width: 350px; font-size : 20px; background: white;" name="hesCode" required>

                    </div>

                    <div class="col-6">

                        <label for="male" style="font-size: 25px; /* font-size: 30px; */ margin-bottom: 40px; /* position: relative; */ font-family: 'Raleway', sans-serif; color: white; padding-right: 20px; padding-top: 15px;">SOYADI</label>
                        <input type="text" class="input-field" placeholder=@Model.masked_lastname disabled="disabled" style="width: 350px; font-size : 20px; background: white;" name="hesCode" required>

                    </div>
                </div>

                <div class="row">
                    <div class="col-6">

                        <label for="male" style="font-size: 25px; /* font-size: 30px; */ margin-bottom: 40px; /* position: relative; */ font-family: 'Raleway', sans-serif; color: white; padding-right: 20px; padding-top: 15px;">TC KİMLİK NO</label>
                        <input type="text" class="input-field" placeholder=@Model.masked_identity_number disabled="disabled" style="width: 350px; font-size : 20px; background: white;" name="hesCode" required>

                    </div>

                    <div class="col-6">

                        <label for="male" style="font-size: 25px; /* font-size: 30px; */ margin-bottom: 40px; /* position: relative; */ font-family: 'Raleway', sans-serif; color: white; padding-right: 20px; padding-top: 15px;">GEÇERLİLİK TARİHİ</label>
                        <input type="text" class="input-field" placeholder=@Model.expiration_date disabled="disabled" style="width: 350px; font-size : 20px; background: white;" name="hesCode" required>

                    </div>
                </div>

                <div class="row">

                    <div class="col-6">

                        <label for="male" style="font-size: 25px; /* font-size: 30px; */ margin-bottom: 40px; /* position: relative; */ font-family: 'Raleway', sans-serif; color: white; padding-right: 20px; padding-top: 15px;">DURUMU</label>

                        <input type="text" class="input-field" placeholder=@Model.current_health_status disabled="disabled" style="width: 350px; font-size : 20px; background: white;" name="hesCode" required>

                    </div>

                </div>

                <p style="color:white; font-size : 15px ; font-family: 'Raleway', sans-serif;">* Yeni sorgulama işlemi için butona tıklayınız. </p>
                <input class="submit-w3" type="submit" value="Yeni Sorgu →" style="width : 200px ; left : 610px ; position:relative ; bottom:140px ; background-color :#9e0000">
            </form>
        </div>
    </div>
</div>